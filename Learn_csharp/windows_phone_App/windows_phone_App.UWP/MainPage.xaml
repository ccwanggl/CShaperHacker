<forms:WindowsPage
    x:Class="windows_phone_App.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:forms="using:Xamarin.Forms.Platform.UWP"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:windows_phone_App.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button Content="Button" Margin="130,218,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="phone_textout" HorizontalAlignment="Left" Margin="130,101,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</forms:WindowsPage>