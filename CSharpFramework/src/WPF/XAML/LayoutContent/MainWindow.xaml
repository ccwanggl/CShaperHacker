<Window
    x:Class="LayoutContent.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LayoutContent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="200"
    Height="100"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Column="0"
            Margin="10"
            Content="OK" />
        <Button
            Grid.Column="0"
            Margin="20"
            Content="OK" />
        <Button
            Grid.Column="0"
            Margin="30"
            Content="OK" />

        <Button Grid.Column="1" Margin="10">
            <Button Margin="10">
                <Button Margin="10" Content="OK" />
            </Button>
        </Button>

    </Grid>
</Window>
